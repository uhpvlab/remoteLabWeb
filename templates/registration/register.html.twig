{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <div class="bg-white py-6 sm:py-8 lg:py-12">
        <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
            <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8">Register</h2>


            <div class="max-w-lg border rounded-lg mx-auto">
                {{ form_start(registrationForm) }}

                <div class="flex flex-col gap-4 p-4 md:p-8">
                    <div>
                        <label for="{{ registrationForm.email.vars.id }}" class="inline-block text-gray-800 text-sm sm:text-base mb-2">Email</label>
                        {{ form_widget(registrationForm.email, { attr: { class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2'}}) }}

                    </div>

                    <div>
                        <label for="{{ registrationForm.plainPassword.vars.id }}" class="inline-block text-gray-800 text-sm sm:text-base mb-2">Password</label>
                        {{ form_widget(registrationForm.plainPassword, { attr: { class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2'}}) }}

                    </div>

                    <div>
                        {{ form_widget(registrationForm.agreeTerms) }} Agree this <a href="#" class="text-indigo-500 hover:text-indigo-600 active:text-indigo-700 transition duration-100" target="_blank">Terms and Conditions</a>

                    </div>

                    <button class="block bg-gray-800 hover:bg-gray-700 active:bg-gray-600 focus-visible:ring ring-gray-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3">Sign Up</button>


                </div>

                <div class="flex justify-center items-center bg-gray-100 p-4">
                    <p class="text-gray-500 text-sm text-center">Already have an account? <a href="{{ path('app_login') }}" class="text-indigo-500 hover:text-indigo-600 active:text-indigo-700 transition duration-100">Login</a></p>
                </div>
                {{ form_end(registrationForm) }}

            </div>
        </div>
    </div>
{% endblock %}
